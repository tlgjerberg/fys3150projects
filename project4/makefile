CXX = g++
MPI_CXX = mpic++
CPPflags_r =  -Wall
CPPflags_o =  -O3

LIB = -DARMA_DONT_USE_WRAPPER -llapack -lblas

final: $()

ising_reg.o: Ising.cpp main.cpp
			${MPI_CXX} ${CPPflags_r} main.cpp Ising.cpp  ${LIB} -c ising.o

ising_opt.o :Ising.cpp main.cpp
						${MPI_CXX} ${CPPflags_o}  ${LIB} -c ising.o


clean:
			rm -f *.o *.dat *.txt
